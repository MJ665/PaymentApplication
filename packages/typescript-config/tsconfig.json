{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@repo/*": ["packages/*/src"]
      },
      "target": "esnext",
      "module": "commonjs",
      "lib": ["es6", "dom"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "outDir": "dist",
      "rootDir": ".",
      "declaration": true
    },
    "include": ["packages/**/*"],
    "exclude": ["node_modules"]
  }
  